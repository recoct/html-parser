{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "babelOptions": {
      "configFile": "./.babelrc"
    }
  },
  "rules": {
    "semi": [ "error", "never" ],
    "curly": [ "error", "all" ],
    "array-bracket-spacing": [ "error", "always" ],
    "object-curly-spacing": [ "error", "always" ],
    "object-curly-newline": [ "error", { "multiline": true } ],
    "no-use-before-define": [ "error", "nofunc" ],
    "no-underscore-dangle": [ "error", { "allowAfterThis": true } ],
    "no-restricted-syntax": [ "error", "IterationStatement" ],
    "arrow-parens": [ "error", "as-needed", { "requireForBlockBody": true } ],
    "generator-star-spacing": [ "error", { "before": false, "after": true, "method": { "after": false } } ],
    "no-shadow": [ "off" ],
    "no-param-reassign": [ "off" ],
    "no-console": [ "off" ],
    "no-implicit-globals": [ "off" ],
    "max-classes-per-file": [ "off" ],
    "import/extensions": [ "error", "ignorePackages", { "js": "always", "mjs": "never", "jsx": "never" } ]
  }
}
